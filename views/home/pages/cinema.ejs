<div class="hero common-hero">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="hero-ct">
					<h1> List Cinemas</h1>
					<ul class="breadcumb">
						<li class="active"><a href="#">Home</a></li>
						<li> <span class="ion-ios-arrow-right"></span> List Cinemas</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="page-single movie_list">
	<div class="container">
		<div class="row ipad-width2" style="    margin-top: 30px;">
			<div class="col-md-8 col-sm-12 col-xs-12" style="width:100%">
				<div class="topbar-filter">
					<p  style="font-size: 18px;" >Found  <span><b><%-listCinema.length%></b></span> cinema</p>
					
				</div>
				<% listCinema.forEach(list => { %>
					<div class="movie-item-style-2" style="display:inline;">
						<!-- <img src="images/uploads/mv1.jpg" alt=""> -->
						<div class="mv-item-infor">
							<h6><a href="<%-listCinema.CinemaISN %>" style="font-size: 22px;"> <%-list.CinemaName %> </a></h6>
							<p class="rate"><i class="ion-android-star"></i><span>8.1</span> /10</p>
							<p class="describe">
							<i class="fas fa-map-marker-alt" style="color: chartreuse; margin-right: 10px;"></i>
							<%-list.CinemaAddress%>
							<a class="ggMap btn btn-primary" data-toggle="modal" data-target="#<%-list.CinemaISN%>Modal">show google map</a>
							</p>
							  <!-- Modal -->
							  <div class="modal fade" id="<%-list.CinemaISN%>Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog" role="document">
								  <div class="modal-content">
									
								<div class="modal-body">
									
									<iframe src="<%= list.Location %>" width="570" height="450" style="border:0;" ></iframe>		

									</div>
									<div class="modal-footer">
									  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

									</div>
								  </div>
								</div>
							  </div>
						</div>
						
					</div>
					<%})%>
					</div>
					</div>
					</div>
					</div>
					
				 
				
				
				
				
				
			