
  <!-- Begin page content -->
  <div class="container-fluid">
    <!-- Page heading -->
    <h1 class="h3 md-2 text-gray-800">Room of Cinema
      <button href="" class="btn btn-success btn-circle pull-left" data-toggle="modal" data-target="#ModelCinema">
        +
      </button>
    </h1>
<!-- Modal -->
<div class="modal fade" id="ModelCinema" tabindex="-1" role="dialog" aria-labelledby="ModelCinemaTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">ADD NEW ROOM</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form  id="addRoom">
      <div class="modal-body" style="height: 261px;">
        
          <table class="table table-bordered" style="font-size: 20px;"  width="100%" cellspacing="0">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Room name</th>
                <th scope="col">Row seats</th>
                <th scope="col">Column seats</th>
                <th scope="col">Status</th>
                <th scope="col">Cinema </th>
                <th scope="col">Update By </th>
              </tr>
            </thead>
            <tbody>
             <tr>
              
                <td class="col-addInfo "><input name="RoomName" style="width: 100%;"class="form-control" type="text" required></td>
                <td class="col-addInfo "><input name="RowSeats" style="width: 100%;"class="form-control" type="text"required></td>
                <td class="col-addInfo "><input name="ColumnSeats" style="width: 100%;" class="form-control" type="text"required></td>
                <td class="col-addInfo ">
                    <select name="Status" class="form-control">
                      <% listDesStatus.forEach(list => { %> 
                        <option value="<%-list.StatusCode %>"> <%= list.StatusDescription %></option>
                        <%})%>
                    </select>
                  </td>
                  <td class="col-addInfo ">
                    <select name="CinemaISN" class="form-control" id="CinemaName">
                      <option selected>Choose cinema</option>
                      <%listCinema.forEach(list=>{%>
                      <option value="<%=list.CinemaISN%>"><%=list.CinemaName%></option>
                      <%})%>
                    </select>
                  </td>
                  <td class="col-addInfo ">
                    <select name="UpdateBy" class="form-control">
                      <% listStaff.forEach(list=>{%>
                      <option value="<%-list.StaffISN %>"><%= list.StaffName %></option>
                      <%})%>
                    </select>
                  </td>
             </tr>
            </tbody>
          </table>       
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Add Province</button>
      </div>
    </form>
    </div>
  </div>
</div>
    <!-- DataTable Movie -->
    <div class="card shadow md-4">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead class="thead-dark">
              <tr>
                <th>ID</th>
                <th>Cinema name</th>
                <th>Room name</th>
                <th>RowSeats</th>
                <th>ColumnSeats</th>
                <th>Status</th>
                <th>Remove</th>
              </tr>

            <tfoot>
              <tr>
                <th>ID</th>
                <th>Cinema name</th>
                <th>Room name</th>
                <th>RowSeats</th>
                <th>ColumnSeats</th>
                <th>Status</th>
                <th>Remove</th>
              </tr>
            </tfoot>
            <tbody>
              <% listRoom.forEach(list=> { %>
                <tr>
                  <td>
                    <%= list.RoomISN %>
                  </td>
                  <td>
                    <%= list.CinemaName %>
                  </td>
                  <td class="plot">
                    <%= list.RoomName %>
                  </td>
                  <td>
                    <%= list.RowSeats %>
                  </td>
                  <td>
                    <%= list.ColumnSeats %>
                  </td>
                  <td>
                    <%= list.StatusDescription %>
                  </td>
                 
                  <td>
              
                    <button   value="<%=list.RoomISN%>" class="deleteRoom btn btn-danger btn-circle btn-sm"> 
                      <i class="fas fa-trash"></i>
                    </button>
                  
                  </td>
                </tr>
                <% }) %>
            </tbody>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
