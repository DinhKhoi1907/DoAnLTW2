
<!-- Begin page content -->
<div class="container-fluid">
  <!-- Page heading -->
  <h1 class="h3 md-2 text-gray-800">Province
    <button  type="button" class="btn btn-primary btn btn-success btn-circle pull-left" data-toggle="modal" data-target="#ModelProvince">
      +
    </button>
  </h1>
<!-- Modal -->
<div class="modal fade" id="ModelProvince" tabindex="-1" role="dialog" aria-labelledby="ModelProvinceTitle" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">ADD NEW MOVIES</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form  id="addProvince">
      <div class="modal-body" style="height: 261px;">
        
          <table class="table table-bordered" style="font-size: 20px;"  width="100%" cellspacing="0">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Province Name</th>
             
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="col-addInfo "><input class="form-control col-addNameProvice" type="text" name="ProvinceName" required></td>
              </tr>
            </tbody>
          </table>       
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Add Province</button>
      </div>
    </form>
    </div>
  </div>
</div>



  <!-- DataTable Movie -->
  <div class="card shadow md-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead class="thead-dark">
            <tr>
              <th>ID Province</th>
              <th>Province Name</th>
              <th>Remove</th>
            </tr>
            <tfoot>
              <tr>
                <th>ID Province</th>
                <th>Province Name</th>
                <th>Remove</th>
              </tr>
            </tfoot>
            <tbody>
              <% allProvince.rows.forEach(provinces => { %>
               <tr>
                <td><%= provinces.ProvinceISN %> </td>
                <td><%= provinces.ProvinceName %> </td>
                <td>
                    <button  class="btn btn-danger btn-circle btn-sm deleteProvince" name="ProvinceISN" value="<%=provinces.ProvinceISN%>"> 
                      <i class="fas fa-trash"></i>
                    </button>
                
                </td>
               </tr>
              <% }) %>
            </tbody>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>

